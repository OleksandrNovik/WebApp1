@using BLL.ViewModels;
@model LogInViewModel;

@{
	ViewData["Title"] = "LogIn";
	Layout = "/Views/Shared/_Layout.cshtml";
}
<h2>Log In</h2>

<form asp-action="LogIn">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label"> Ім'я користувача </label>
            <input asp-for="UserName" class="form-control" type="text" style="width: 350px" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"> Пароль </label>
            <input asp-for="Password" class="form-control" type="text" style="width: 350px" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="LogIn" class="btn btn-primary"/> 
        </div>
    </div>
</form>